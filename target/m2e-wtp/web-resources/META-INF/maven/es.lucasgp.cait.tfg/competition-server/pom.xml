<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>es.lucasgp.cait.tfg</groupId>
	<artifactId>competition-server</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>war</packaging>

	<name>Competition Server</name>
	<description>Competition Server</description>

	<properties>
		<jetty.version>8.1.14.v20131031</jetty.version>
		<!-- <jetty.version>9.1.1.v20140108</jetty.version> -->

		<!-- JavaEE -->
		<javax.servlet-api.version>3.1.0</javax.servlet-api.version>

		<!-- Spring -->
		<spring-data-rest.version>2.0.0.RC1</spring-data-rest.version>
		<spring-data-mongodb.version>1.4.0.RC1</spring-data-mongodb.version>

		<!-- Logging -->
		<slf4j.version>1.7.5</slf4j.version>
		<logback.version>1.1.0</logback.version>
	</properties>

	<build>

		<finalName>${project.artifactId}-${project.version}</finalName>

		<resources>
			<resource>
				<directory>/src/main/webapp/web</directory>
				<targetPath>${project.build.directory}</targetPath>
			</resource>
		</resources>

		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webXml>${basedir}/src/main/webapp/WEB-INF/web.xml</webXml>
					<webResources>
						<resource>
							<!-- HTML -->
							<directory>${basedir}/src/main/webapp/web</directory>
							<includes>
								<include>main.html</include>
							</includes>
						</resource>
						<resource>
							<!-- CSS -->
							<directory>${basedir}/src/main/webapp/web/css</directory>
							<includes>
								<include>*.css</include>
							</includes>
						</resource>
						<resource>
							<!-- Javascript -->
							<directory>${basedir}/src/main/webapp/web/js</directory>
							<includes>
								<include>**/*.js</include>
							</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<!-- <groupId>org.eclipse.jetty</groupId> -->
				<!-- <artifactId>jetty-maven-plugin</artifactId> -->
				<version>${jetty.version}</version>
				<configuration>
					<jettyXml>${basedir}/conf/jetty/jetty.xml</jettyXml>
					<scanIntervalSeconds>0</scanIntervalSeconds>
					<reload>manual</reload>
					<webApp>
						<contextPath>/</contextPath>
						<descriptor>${project.build.directory}/WEB-INF/web.xml</descriptor>
						<jettyEnvXml>${basedir}/conf/jetty/jetty-env.xml</jettyEnvXml>
					</webApp>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
<!-- 				<version>2.3</version> -->
				<configuration>
					<path>/</path>
				</configuration>
			</plugin>

		</plugins>
	</build>




	<dependencies>

		<!-- JavaEE -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>${javax.servlet-api.version}</version>
			<scope>provided</scope>
		</dependency>

		<!-- Spring -->
		<dependency>
			<groupId>org.springframework.data</groupId>
			<artifactId>spring-data-rest-webmvc</artifactId>
			<version>${spring-data-rest.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.data</groupId>
			<artifactId>spring-data-mongodb</artifactId>
			<version>${spring-data-mongodb.version}</version>
		</dependency>

		<!-- Lombock -->
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>1.12.4</version>
			<scope>provided</scope>
		</dependency>

		<!-- Logging -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>jcl-over-slf4j</artifactId>
			<version>${slf4j.version}</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>jul-to-slf4j</artifactId>
			<version>${slf4j.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<version>${logback.version}</version>
		</dependency>

	</dependencies>

	<repositories>
		<repository>
			<id>spring-milestones</id>
			<name>Spring Milestones</name>
			<url>http://repo.spring.io/milestone</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

</project>